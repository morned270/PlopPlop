<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quiz1Activity"
    android:background="@color/colorSand">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:layout_marginStart="111dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="111dp"
        android:text="다이버 퀴즈"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ow_imageView4"
        android:layout_width="306dp"
        android:layout_height="264dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:srcCompat="@drawable/diverquiz" />

    <Button
        android:id="@+id/btn_start_quiz"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="67dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="73dp"
        android:text="시작하기"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ow_imageView4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ow_imageView4"
        app:layout_constraintTop_toBottomOf="@+id/ow_imageView4"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>